<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>ID</th>
      <th>USERNAME</th>
      <th>SEAT</th>
      <th>STATUS</th>
      <th>START</th>
      <th>END</th>
      <th>CREATED</th>
    </tr>
  </thead>

  <tbody>
    <% @logs.each do |log| %>
      <% if log.status == 'success' %>
        <tr class="success">
          <td><%= log.id %></td>
          <td><%=log.username%></td>
          <td><%=log.seat%></td>
          <td><%=log.status%></td>
          <td><%=log.start_time%></td>
          <td><%=log.end_time %></td>
          <td><%=log.created_at %></td>
        </tr>
      <% else %>
        <tr class="danger">
          <td><%= log.id %></td>
          <td><%=log.username%></td>
          <td><%=log.seat%></td>
          <td><%=log.status%></td>
          <td><%=log.start_time%></td>
          <td><%=log.end_time %></td>
          <td><%=log.created_at %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<%= paginate @logs, :theme => 'twitter-bootstrap-3' %></div>
